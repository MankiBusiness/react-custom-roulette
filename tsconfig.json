{
  "compilerOptions": {
    "target": "ESNext",
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "allowJs": true
  },
  "include": ["src/*.tsx", "src/*.ts", "tests/*.tsx", "tests/*.ts"],
  "exclude": ["node_modules"]
}
