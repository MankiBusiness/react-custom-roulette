{
  "compilerOptions": {
    "target": "ESNext",
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "allowJs": true
  },
  "include": [
    "src/*.tsx",
    "src/*.ts",
    "examples/src/*.tsx",
    "tests/*.tsx",
    "tests/*.ts"
  ],
  "exclude": ["node_modules"]
}
